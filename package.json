{
  "name": "car-share-fare",
  "version": "0.9.0",
  "main": "dist/index.js",
  "umd:main": "dist/car-share-fare.umd.production.js",
  "module": "dist/car-share-fare.es.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npx http-server dist/ -o",
    "start:watch": "tsdx watch",
    "build": "tsdx build && cp -Rv www/* dist",
    "now-build": "yarn build",
    "pretest": "yarn lint",
    "test": "tsdx test --watchAll",
    "pretest:ci": "yarn lint",
    "test:ci": "tsdx test",
    "lint": "tsdx lint src"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/**/*.(spec|test).{ts,tsx}"
    ]
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "eslint-config-react-app": "5.0.1",
    "husky": "^2.4.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rollup-plugin-serve": "^1.0.1",
    "tsdx": "^0.9.3",
    "tslib": "^1.10.0",
    "typescript": "^3.5.2"
  }
}
